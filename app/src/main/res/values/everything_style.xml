<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Rl_Weather">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Rl_Weather_left_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28px</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">15px</item>
    </style>

    <style name="Rl_Weather_right_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28px</item>
        <item name="android:paddingLeft">15px</item>
    </style>

    <style name="FutureWeather_Item_tv">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28px</item>
    </style>

    <style name="Calendar_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32px</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20px</item>
    </style>

    <style name="Currency_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginRight">30px</item>
        <item name="android:layout_marginTop">30px</item>
        <item name="android:drawableRight">@drawable/arrow_down</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">20px</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:hint">选择币种</item>
        <item name="android:background">@drawable/guide_item_bg_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36px</item>
    </style>



</resources>