<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <include
        android:id="@+id/currency_title"
        layout="@layout/title_layout" />

    <TextView
        android:id="@+id/currency_from"
        android:layout_below="@id/currency_title"
        style="@style/Currency_tv" />

    <ImageView
        android:id="@+id/two_slide"
        android:layout_width="50px"
        android:layout_height="86px"
        android:layout_below="@+id/currency_from"
        android:layout_centerHorizontal="true"
        android:src="@drawable/two_slide"
        android:layout_marginTop="20px"/>

    <TextView
        android:id="@+id/currency_to"
        android:layout_below="@id/two_slide"
        style="@style/Currency_tv" />


</RelativeLayout>